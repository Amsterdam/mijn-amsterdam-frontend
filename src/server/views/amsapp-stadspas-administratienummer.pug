doctype html
html(lang="nl")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")

    title Stadspas
    style(nonce=nonce).
      html, body {
        height: 100%;
        width: 100%;
        margin: 0;
      }

      body {
        font-family: Amsterdam Sans, Arial;
        font-weight: 400;
        font-size: 1.3rem;
      }

      #amsterdam-logo svg {
        margin-top: 25px;
        margin-left: 20px;
        width: 8rem;
      }

      .main {
        margin-left: 20px;
        margin-right: 20px;
      }

      .main h1 {
        font-weight: 800;
        font-size: 2.5rem;
      }

      #protocol-link-button {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        line-height: 1.5rem;
        padding-block: 0.5rem;
        border: none;
        outline-offset: 2px;
        touch-action: manipulation;
        cursor: pointer;
        background-color: #004699;
        color: white;
        width: 100%;
        height: 2.5rem;
        margin-top: 1em;
      }

      #protocol-link-button:link {
        text-decoration: none;
      }

  body
    header
      div(id='amsterdam-logo', nonce=nonce)
        | !{amsterdamLogo}

    div(class='main')
      h1 Inloggen
      p Open de Amsterdam App om verder te gaan.

      if administratienummerEncrypted
        pre #{administratienummerEncrypted}

      if error
        p Foutmelding: #{error.code} - #{error.message}

      a(href=appHref id='protocol-link-button') Open Amsterdam App

    script(type='text/javascript' nonce=nonce).
        document.getElementById('protocol-link').click();

